{
  "manifest_version": 3,
  "name": "BetterE-class",
  "version": "1.1.0",
  "description": "A project to make E-class easier to use.",
  "author": "kmch4n",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BetterE-class Settings"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": [
    "*://eclass.doshisha.ac.jp/"
  ],
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://eclass.doshisha.ac.jp/webclass/course.php/*/my-reports*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://eclass.doshisha.ac.jp/webclass/msg_editor.php*"
      ],
      "js": ["message-tools.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://eclass.doshisha.ac.jp/*"
      ],
      "js": ["message-interceptor.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}